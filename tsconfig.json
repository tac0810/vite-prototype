{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["DOM", "DOM.Iterable", "ESNext"],

		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,

		"allowJs": true,

		"noEmit": true,

		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,

		"skipLibCheck": true,
		"types": [
			"vite-plugin-glsl/ext"
		]
	},
	"include": ["src/**/*"]
}
